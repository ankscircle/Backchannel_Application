<%= stylesheet_link_tag "homes" %>
<%= stylesheet_link_tag "leftlinks" %>

<div align="center" class="divhome" id="home">
  <div class="link_to_home" id="home_header">
    <h1 class= "head1" id="logo_text">BACKCHANNEL APPLICATION</h1>

    <h1 xmlns="http://www.w3.org/1999/html">New User</h1>
<% @page_title = "UserAuth | Signup" %>
<div class= "Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>

      <p> Username:</br> <%= f.text_field :username, :id => "user"%> </p>

      <p> Email:</br> <%= f.text_field :email, :id => "email"%> </p>

      <p> Password:</br> <%= f.password_field :password, :id => "password"%></p>

      <p> Password Confirmation:</br> <%= f.password_field :password_confirmation, :id => "passwordconf"%> </p>

      <p> Admin: </br> <%= f.check_box :role, :id => "role"  %></p>
      <%= f.submit :Signup, :id => "signup" %>

<% end %>

  <% if @user.errors.any? %>
      <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
            <li>* <%= message_error %></li>
        <% end %>
      </ul>
  <% end %>
</div>

</div>
